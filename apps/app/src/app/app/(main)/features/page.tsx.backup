import { createServerClient } from "@/lib/supabaseServerClient";
import { redirect } from "next/navigation";
import { updateFeatureSettings } from "../settings/actions";
import { Label } from "@/components/ui/label";
import { EyeOff } from "lucide-react";
import { FeatureSaveButton } from "../settings/feature-save-button";

export default async function FeatureSettingsPage() {
  const supabase = await createServerClient();
  const {
    data: { user },
  } = await supabase.auth.getUser();

  if (!user) {
    redirect("/app/login");
  }

  const { data: appUser } = await supabase
    .from("users")
    .select("current_profile_id")
    .eq("id", user.id)
    .maybeSingle();

  if (!appUser?.current_profile_id) {
    redirect("/app/store-setup");
  }

  const { data: profile } = await supabase
    .from("profiles")
    .select("*, stores(*)")
    .eq("id", appUser.current_profile_id)
    .maybeSingle();

  if (!profile || !profile.store_id) {
    redirect("/app/store-setup");
  }

  if (profile.role !== "staff" && profile.role !== "admin") {
    redirect("/app/timecard");
  }

  const store = profile.stores as any;

  const showDashboard = store?.show_dashboard ?? true;
  const showAttendance = store?.show_attendance ?? true;
  const showTimecard = store?.show_timecard ?? true;
  const showUsers = store?.show_users ?? true;
  const showRoles = store?.show_roles ?? true;

  return (
    <div className="bg-gray-50 dark:bg-gray-900 min-h-screen pb-10">
      <div className="max-w-3xl mx-auto pt-6 px-4">
        <div className="flex items-center justify-between mb-4">
          <div>
            <h1 className="text-xl md:text-2xl font-bold text-gray-900 dark:text-white">機能追加</h1>
            <p className="mt-1 text-xs md:text-sm text-gray-500 dark:text-gray-400">
              店舗ごとに利用可能な機能を追加・削除します。インストール済みの機能だけがサイドバーに表示され、アクセス可能になります。
            </p>
          </div>
        </div>

        <form action={updateFeatureSettings} className="space-y-6">
          <div className="grid gap-4 md:grid-cols-2">
            {/* Dashboard */}
            <div className="relative">
              <input
                type="checkbox"
                id="show_dashboard"
                name="show_dashboard"
                defaultChecked={showDashboard}
                className="peer sr-only"
              />
              <div className="flex h-full flex-col rounded-2xl border border-slate-200 dark:border-gray-700 bg-white/80 dark:bg-gray-800/80 p-4 shadow-sm transition-all peer-checked:border-blue-500 peer-checked:bg-blue-50/80 dark:peer-checked:bg-blue-900/20">
                <div className="flex items-start gap-3">
                  <div className="flex h-9 w-9 items-center justify-center rounded-xl bg-blue-100 dark:bg-blue-900 text-blue-600 dark:text-blue-400 text-sm font-semibold">
                    DB
                  </div>
                  <div className="space-y-1">
                    <div className="flex items-center gap-2">
                      <p className="text-sm font-semibold text-slate-900 dark:text-white">ダッシュボード</p>
                    </div>
                    <p className="text-xs text-slate-500 dark:text-gray-400">
                      出勤状況のサマリーや今日の稼働状況をひと目で確認できます。
                    </p>
                  </div>
                </div>
                <div className="mt-4 flex items-center justify-between">
                  <p className="text-[11px] font-medium tracking-wide text-slate-400 uppercase">
                    {showDashboard ? "必須機能" : "オプション"}
                  </p>
                  <Label
                    htmlFor="show_dashboard"
                    className="inline-flex cursor-pointer items-center rounded-full border px-3 py-1 text-[11px] font-semibold tracking-wide transition-colors peer-checked:border-blue-600 peer-checked:bg-blue-600 peer-checked:text-white border-slate-200 dark:border-gray-600 bg-white dark:bg-gray-700 text-slate-700 dark:text-gray-200 hover:bg-slate-50 dark:hover:bg-gray-600"
                  >
                    <span className="inline-flex items-center gap-1 peer-checked:hidden">
                      <span>インストール</span>
                    </span>
                    <span className="hidden peer-checked:inline-flex items-center gap-1">
                      <span>インストール済み</span>
                      <EyeOff className="h-3 w-3" />
                    </span>
                  </Label>
                </div>
              </div>
            </div>

            {/* Attendance */}
            <div className="relative">
              <input
                type="checkbox"
                id="show_attendance"
                name="show_attendance"
                defaultChecked={showAttendance}
                className="peer sr-only"
              />
              <div className="flex h-full flex-col rounded-2xl border border-slate-200 dark:border-gray-700 bg-white/80 dark:bg-gray-800/80 p-4 shadow-sm transition-all peer-checked:border-blue-500 peer-checked:bg-blue-50/80 dark:peer-checked:bg-blue-900/20">
                <div className="flex items-start gap-3">
                  <div className="flex h-9 w-9 items-center justify-center rounded-xl bg-emerald-100 dark:bg-emerald-900 text-emerald-600 dark:text-emerald-400 text-sm font-semibold">
                    AT
                  </div>
                  <div className="space-y-1">
                    <p className="text-sm font-semibold text-slate-900 dark:text-white">勤怠</p>
                    <p className="text-xs text-slate-500 dark:text-gray-400">
                      シフトと出勤ステータスを一覧で確認・管理できます。
                    </p>
                  </div>
                </div>
                <div className="mt-4 flex items-center justify-between">
                  <p className="text-[11px] font-medium tracking-wide text-slate-400 uppercase">マネジメント向け</p>
                  <Label
                    htmlFor="show_attendance"
                    className="inline-flex cursor-pointer items-center rounded-full border px-3 py-1 text-[11px] font-semibold tracking-wide transition-colors peer-checked:border-blue-600 peer-checked:bg-blue-600 peer-checked:text-white border-slate-200 bg-white text-slate-700 hover:bg-slate-50"
                  >
                    <span className="inline-flex items-center gap-1 peer-checked:hidden">
                      <span>インストール</span>
                    </span>
                    <span className="hidden peer-checked:inline-flex items-center gap-1">
                      <span>インストール済み</span>
                      <EyeOff className="h-3 w-3" />
                    </span>
                  </Label>
                </div>
              </div>
            </div>

            {/* Timecard */}
            <div className="relative">
              <input
                type="checkbox"
                id="show_timecard"
                name="show_timecard"
                defaultChecked={showTimecard}
                className="peer sr-only"
              />
              <div className="flex h-full flex-col rounded-2xl border border-slate-200 dark:border-gray-700 bg-white/80 dark:bg-gray-800/80 p-4 shadow-sm transition-all peer-checked:border-blue-500 peer-checked:bg-blue-50/80 dark:peer-checked:bg-blue-900/20">
                <div className="flex items-start gap-3">
                  <div className="flex h-9 w-9 items-center justify-center rounded-xl bg-sky-100 dark:bg-sky-900 text-sky-600 dark:text-sky-400 text-sm font-semibold">
                    TC
                  </div>
                  <div className="space-y-1">
                    <p className="text-sm font-semibold text-slate-900 dark:text-white">タイムカード</p>
                    <p className="text-xs text-slate-500 dark:text-gray-400">
                      出勤・退勤の打刻と勤務履歴の確認に使う基本機能です。
                    </p>
                  </div>
                </div>
                <div className="mt-4 flex items-center justify-between">
                  <p className="text-[11px] font-medium tracking-wide text-slate-400 uppercase">キャスト/スタッフ共通</p>
                  <Label
                    htmlFor="show_timecard"
                    className="inline-flex cursor-pointer items-center rounded-full border px-3 py-1 text-[11px] font-semibold tracking-wide transition-colors peer-checked:border-blue-600 peer-checked:bg-blue-600 peer-checked:text-white border-slate-200 dark:border-gray-600 bg-white dark:bg-gray-700 text-slate-700 dark:text-gray-200 hover:bg-slate-50 dark:hover:bg-gray-600"
                  >
                    <span className="inline-flex items-center gap-1 peer-checked:hidden">
                      <span>インストール</span>
                    </span>
                    <span className="hidden peer-checked:inline-flex items-center gap-1">
                      <span>インストール済み</span>
                      <EyeOff className="h-3 w-3" />
                    </span>
                  </Label>
                </div>
              </div>
            </div>

            {/* Users */}
            <div className="relative">
              <input
                type="checkbox"
                id="show_users"
                name="show_users"
                defaultChecked={showUsers}
                className="peer sr-only"
              />
              <div className="flex h-full flex-col rounded-2xl border border-slate-200 dark:border-gray-700 bg-white/80 dark:bg-gray-800/80 p-4 shadow-sm transition-all peer-checked:border-blue-500 peer-checked:bg-blue-50/80 dark:peer-checked:bg-blue-900/20">
                <div className="flex items-start gap-3">
                  <div className="flex h-9 w-9 items-center justify-center rounded-xl bg-amber-100 dark:bg-amber-900 text-amber-600 dark:text-amber-400 text-sm font-semibold">
                    US
                  </div>
                  <div className="space-y-1">
                    <p className="text-sm font-semibold text-slate-900 dark:text-white">ユーザー管理</p>
                    <p className="text-xs text-slate-500 dark:text-gray-400">
                      キャスト・スタッフ・ゲストのアカウントを一元管理します。
                    </p>
                  </div>
                </div>
                <div className="mt-4 flex items-center justify-between">
                  <p className="text-[11px] font-medium tracking-wide text-slate-400 uppercase">管理者向け</p>
                  <Label
                    htmlFor="show_users"
                    className="inline-flex cursor-pointer items-center rounded-full border px-3 py-1 text-[11px] font-semibold tracking-wide transition-colors peer-checked:border-blue-600 peer-checked:bg-blue-600 peer-checked:text-white border-slate-200 dark:border-gray-600 bg-white dark:bg-gray-700 text-slate-700 dark:text-gray-200 hover:bg-slate-50 dark:hover:bg-gray-600"
                  >
                    <span className="inline-flex items-center gap-1 peer-checked:hidden">
                      <span>インストール</span>
                    </span>
                    <span className="hidden peer-checked:inline-flex items-center gap-1">
                      <span>インストール済み</span>
                      <EyeOff className="h-3 w-3" />
                    </span>
                  </Label>
                </div>
              </div>
            </div>

            {/* Roles */}
            <div className="relative">
              <input
                type="checkbox"
                id="show_roles"
                name="show_roles"
                defaultChecked={showRoles}
                className="peer sr-only"
              />
              <div className="flex h-full flex-col rounded-2xl border border-slate-200 dark:border-gray-700 bg-white/80 dark:bg-gray-800/80 p-4 shadow-sm transition-all peer-checked:border-blue-500 peer-checked:bg-blue-50/80 dark:peer-checked:bg-blue-900/20">
                <div className="flex items-start gap-3">
                  <div className="flex h-9 w-9 items-center justify-center rounded-xl bg-fuchsia-100 dark:bg-fuchsia-900 text-fuchsia-600 dark:text-fuchsia-400 text-sm font-semibold">
                    RL
                  </div>
                  <div className="space-y-1">
                    <p className="text-sm font-semibold text-slate-900 dark:text-white">権限管理</p>
                    <p className="text-xs text-slate-500 dark:text-gray-400">
                      ロールごとの権限を細かく設定し、店舗の運用ルールをコントロールします。
                    </p>
                  </div>
                </div>
                <div className="mt-4 flex items-center justify-between">
                  <p className="text-[11px] font-medium tracking-wide text-slate-400 uppercase">高度な設定</p>
                  <Label
                    htmlFor="show_roles"
                    className="inline-flex cursor-pointer items-center rounded-full border px-3 py-1 text-[11px] font-semibold tracking-wide transition-colors peer-checked:border-blue-600 peer-checked:bg-blue-600 peer-checked:text-white border-slate-200 dark:border-gray-600 bg-white dark:bg-gray-700 text-slate-700 dark:text-gray-200 hover:bg-slate-50 dark:hover:bg-gray-600"
                  >
                    <span className="inline-flex items-center gap-1 peer-checked:hidden">
                      <span>インストール</span>
                    </span>
                    <span className="hidden peer-checked:inline-flex items-center gap-1">
                      <span>インストール済み</span>
                      <EyeOff className="h-3 w-3" />
                    </span>
                  </Label>
                </div>
              </div>
            </div>
          </div>

          <div className="pt-4 border-t border-gray-100 flex justify-end">
            <FeatureSaveButton />
          </div>
        </form>
      </div>
    </div>
  );
}
