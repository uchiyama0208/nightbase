{
    "compilerOptions": {
        "lib": [
            "ES2023",
            "dom",
            "dom.iterable"
        ],
        "module": "ESNext",
        "target": "ES2022",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "noUncheckedIndexedAccess": false,
        "plugins": [
            {
                "name": "next"
            }
        ]
    }
}