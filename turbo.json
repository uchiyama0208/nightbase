{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": [
        "**/.env.*local"
    ],
    "tasks": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                ".next/**",
                "!.next/cache/**"
            ],
            "env": [
                "NEXT_PUBLIC_SUPABASE_URL",
                "NEXT_PUBLIC_SUPABASE_ANON_KEY",
                "NEXT_PUBLIC_SITE_URL",
                "NEXT_PUBLIC_LINE_CHANNEL_ID",
                "LINE_CHANNEL_SECRET",
                "SUPABASE_SERVICE_ROLE_KEY",
                "SUPABASE_JWT_SECRET",
                "SUPABASE_ANON_KEY",
                "POSTGRES_URL",
                "POSTGRES_PRISMA_URL",
                "POSTGRES_URL_NON_POOLING",
                "POSTGRES_PASSWORD",
                "FRONTEND_URL"
            ]
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "lint": {
            "cache": false
        },
        "clean": {
            "cache": false
        }
    }
}